{
  "extends": "@tsconfig/react-native/tsconfig.json" /* Recommended React Native TSConfig base */,
  "compilerOptions": {
    /* Completeness */
    "skipLibCheck": false /* Enable type checking for .d.ts files. */,
    "strict": true /* Enable all strict type checking options. */,
    "esModuleInterop": true /* Allow default imports from modules with no default export. */,

    /* Target & Module */
    "target": "esnext" /* Specify ECMAScript target version. */,
    "module": "esnext" /* Specify module code generation. */,

    /* React & JSX */
    "jsx": "react-native" /* Specify JSX code generation (react-native or preserve). */,

    /* Paths */
    "baseUrl": "./" /* Base directory to resolve non-relative module names. */,
    "paths": {
      "*": [
        "src/*"
      ] /* Setup custom paths for your project. Adjust as needed. */
    }
  },
  "include": [
    "src"
  ] /* Specify which files to include in the compilation. Adjust as needed. */
}
